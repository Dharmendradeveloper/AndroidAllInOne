<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="user"
            type="com.avisys.allinone.mypagination.data.model.User" />
    </data>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    bind:cardCornerRadius="@dimen/margin_8dp"
    bind:cardUseCompatPadding="true"
    tools:ignore="UnusedAttribute">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            profileImage="@{user.avatar}"
            android:background="?attr/selectableItemBackgroundBorderless"
            bind:layout_constraintBottom_toBottomOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@{user.firstName}"
            android:textColor="@color/purple_500"
            android:textSize="@dimen/test_size_18sp"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toEndOf="@+id/user_avatar"
            bind:layout_constraintTop_toTopOf="parent"
            tools:text="Morris"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:padding="4dp"
            android:text="@{user.email}"
            android:textColor="@color/purple_500"
            android:textSize="@dimen/test_size_18sp"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toEndOf="@+id/user_avatar"
            bind:layout_constraintTop_toBottomOf="@+id/user_name"
            tools:text="morris@gmail.com" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</layout>